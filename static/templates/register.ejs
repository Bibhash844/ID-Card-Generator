<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link rel="stylesheet" href="/css/register.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <h1>Welcome! Please Register</h1>
      <form id="registerForm" method="post" action="">
        <!-- Step 1: Welcome -->
        <div class="form-step" id="step1">
          <p>Welcome! Please register by clicking the next button.</p>
          <button type="button" class="start" onclick="nextStep(1)">
            Next
          </button>
        </div>

        <!-- Step 2: Organization Type -->
        <div class="form-step" id="step2" style="display: none">
          <label for="orgType"
            >What kind of organization do you represent?</label
          >
          <select id="orgType" name="orgType" placeholder="Select" required>
            <option value="school">School</option>
            <option value="college">College</option>
            <option value="corporate">Corporate</option>
            <option value="small business">Small Business</option>
            <option value="solo">Solo</option>
          </select>
          <div class="btn-div">
            <button type="button" onclick="previousStep(2)">Previous</button>
            <button type="button" onclick="nextStep(2)">Next</button>
          </div>
        </div>

        <!-- Step 3: Organization Name or Personal Name -->
        <div class="form-step" id="step3" style="display: none">
          <label id="nameLabel" for="name"></label>
          <input type="text" id="name" name="name" required />

          <!-- <label id="orgLogo"  for="company-logo">Organization Logo:</label>
                <input type="file"  id="Logo" name="companyLogo" accept="image/*" required> -->
          <hr />
          <div class="btn-div">
            <button type="button" onclick="previousStep(3)">Previous</button>
            <button type="button" onclick="nextStep(3)">Next</button>
          </div>
        </div>

        <!-- Step 4: Email and Phone -->
        <div class="form-step" id="step4" style="display: none">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required />
          <hr />
          <label for="phoneNumber">Phone Number:</label>
          <input type="tel" id="phoneNumber" name="phoneNumber" maxlength="10" required/>
          <hr />
          <div class="btn-div">
            <button type="button" onclick="previousStep(4)">Previous</button>
            <button type="button" onclick="nextStep(4)">Next</button>
          </div>
        </div>

        <!-- Step 5: Additional Information -->
        <div class="form-step" id="step5" style="display: none">
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" required />
          <hr />
          <div class="btn-div">
            <button type="button" onclick="previousStep(5)">Previous</button>
            <button type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>
    <script src="/js/register.js"></script>
  </body>
</html>
